# 环境配置文件示例
# 复制此文件为 .env 并修改相应配置

# Flask 配置
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# 数据库配置（如果使用数据库）
# DATABASE_URL=sqlite:///data/app.db

# 微信自动化配置
# Windows 路径示例
# WECHAT_AUTO_PATH=C:\\Program Files (x86)\\Tencent\\WeChat\\WeChat.exe
# macOS 路径示例  
# WECHAT_AUTO_PATH=/Applications/WeChat.app/Contents/MacOS/WeChat
# Linux 路径示例
# WECHAT_AUTO_PATH=/opt/wechat/wechat

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# API 配置
API_TIMEOUT=30
API_MAX_RETRIES=3

# 安全配置
SECRET_KEY=your-secret-key-here

# 前端配置
VUE_APP_API_BASE_URL=http://localhost:5000